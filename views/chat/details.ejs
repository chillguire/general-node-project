<%- include ('../partials/head') -%>

<link rel="icon" type="image/png" href="../images/icons/favicon.ico">
<link rel="stylesheet" type="text/css" href="../css/main.css">

</head>

<body>
	<div class="bg-gray px-4 py-2 mb-2" id='header'>
		<a href="/chats" class="h5 mb-0 py-1 d-inline-block">Go back</a>
		<span class="text-muted float-right" id='chatNameDisplay'>
		</span>
	</div>

	<div class="px-0">
		<div class="px-4 py-5 chat-box bg-white" style="overflow-y: scroll;" id='messages'>
		</div>

		<form action="#" class="bg-dark" style="position: fixed;width: 100%;height:100%">
			<div class="input-group">
				<input id="input-addon2" type="text" autocomplete="off" placeholder="Type a message"
					aria-describedby="button-addon2" class="form-control rounded-0 border-0 bg-dark text-white">
				<div class="input-group-append">
					<button id="button-addon2" type="submit" class="btn btn-link"><i
							class="material-icons text-white">&#xe163;</i></button>

				</div>
			</div>
		</form>

		<%- include ('../partials/scripts') -%>
		<script src="../../js/main.js"></script>
		<script src="../../js/messages.js"></script>
		<script>
			const userID = "<%= currentUser.id %>";
			const chatID = "<%= chat._id %>";
		</script>
</body>